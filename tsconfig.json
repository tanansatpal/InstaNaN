{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@users/*": [
        "src/users/*"
      ],
      "@posts/*": [
        "src/posts/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
